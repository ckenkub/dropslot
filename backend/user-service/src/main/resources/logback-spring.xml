<configuration>
  <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
  <springProperty scope="context" name="SERVICE_NAME" source="spring.application.name" defaultValue="user-service"/>

  <!-- Console appender that writes structured ECS JSON for container environments -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="co.elastic.logging.logback.EcsEncoder">
      <!-- EcsEncoder supports a serviceName and additionalFields for small custom fields -->
      <serviceName>${SERVICE_NAME}</serviceName>
      <additionalFields>{"ecs.version":"1.12.0"}</additionalFields>
    </encoder>
  </appender>

  <!-- For non-docker/k8s profiles you can still use ECS encoder directly to stdout if desired -->
  <springProfile name="!docker &amp;&amp; !k8s">
    <root level="INFO">
      <appender-ref ref="CONSOLE"/>
    </root>
  </springProfile>

  <!-- When running with 'docker' profile (or locally), log to console to avoid external TCP connections -->
  <!-- For docker and k8s profiles, log to console only -->
  <springProfile name="docker">
    <root level="INFO">
      <appender-ref ref="CONSOLE"/>
    </root>
  </springProfile>
  <springProfile name="k8s">
    <root level="INFO">
      <appender-ref ref="CONSOLE"/>
    </root>
  </springProfile>
</configuration>
